<!DOCTYPE html>
<html>

    <%= form_for @post do |p|%>

        <div>
            <h4 class="form_title"><%=p.label :title%></h4>
            <%=p.text_field :title, required: true%>
        </div>
        </br>

        <div>
            <h4 class="form_title"> <%=p.label :category%></h4>
            <%=p.select :category, ["Lifestyle", "Music","Food","Fitness"], {}, {required: true, class: "form_button"}%>
        </div>
        </br>

        <div>
            <h4 class="form_title"><%=p.label :author_name%></h4>
            <%=p.text_field :author_name, required: true%>
        </div>
        </br>

         <div>
            <h4 class="form_title"><%=p.label :content%></h4>
            <%=p.text_area :content, required: true%>
        </div>
        </br>

        <div>
            <%=p.submit "Post", class: "form_button"%>
        </div>
        </br>

    <% end %>
</html>